#id.row
  .large-6.large-offset-3
    form(ng-submit="login()")
      fieldset.radius
        .row
          .large-6.columns
            input(type="text", name="username", placeholder="username", ng-model="credentials.username", required=true)
          .large-6.columns
            input(type="password", name="password", placeholder="password", ng-model="credentials.password", required=true)

        .row
          .large-12.columns
            button#log-in.button.large.expand.radius(type="submit") Log In

